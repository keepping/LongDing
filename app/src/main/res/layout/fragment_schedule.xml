<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/x20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y50"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/iv_date_toleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x10"
                android:background="@null"
                android:src="@drawable/slt_date_toleft" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="@dimen/x300"
                android:layout_height="@dimen/y50"
                android:background="@drawable/shape_rectangle_gray"
                android:gravity="center">

            </TextView>

            <ImageButton
                android:id="@+id/iv_date_toright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:background="@null"
                android:src="@drawable/slt_date_toright" />
        </LinearLayout>


        <com.longding999.longding.view.CustomViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/y40"
            android:focusable="false">

        </com.longding999.longding.view.CustomViewPager>
    </LinearLayout>

</ScrollView>




