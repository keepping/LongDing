<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/header_layout"></include>


    <com.longding999.longding.view.ClearEditText
        android:id="@+id/edt_phoneNumber"
        style="@style/EditTextStyle"
        android:layout_marginTop="@dimen/y40"
        android:background="@drawable/shape_corner_white"
        android:hint="@string/phonenumber"
        android:inputType="number"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/y40"
        android:orientation="horizontal">


        <com.longding999.longding.view.ClearEditText
            android:id="@+id/edt_verification"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:background="@drawable/shape_corner_white"
            android:hint="@string/verificationCode"
            android:paddingLeft="@dimen/x40"
            android:textSize="@dimen/x30"
            android:paddingRight="@dimen/x40"
            android:inputType="number"/>

        <Button
            android:id="@+id/btn_verifition"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_weight="2"
            android:background="@drawable/shape_corner_red"
            android:text="@string/getVerification"
            android:textColor="@color/white"
            android:textSize="@dimen/x30" />


    </LinearLayout>


    <com.longding999.longding.view.ClearEditText
        android:id="@+id/edt_password"
        style="@style/EditTextStyle"
        android:layout_marginTop="@dimen/y40"
        android:background="@drawable/shape_corner_white"
        android:hint="@string/password"
        />


    <com.longding999.longding.view.ClearEditText
        android:id="@+id/edt_passwordagain"
       style="@style/EditTextStyle"
        android:layout_marginTop="@dimen/y40"
        android:background="@drawable/shape_corner_white"
        android:hint="@string/passwordagain"
       />


    <CheckBox
        android:id="@+id/cb_followrule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/y40"
        android:button="@drawable/slt_cb_rule"
        android:text="@string/followRule"
        android:textColor="@drawable/slt_rb_color_text" />


    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/y40"
        android:background="@drawable/shape_corner_red"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="@dimen/x34" />

</LinearLayout>