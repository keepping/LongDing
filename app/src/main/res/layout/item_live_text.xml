<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/y40"
    android:paddingLeft="@dimen/x40"
    android:paddingRight="@dimen/x40">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y240"
        android:orientation="horizontal"
        android:background="#ebebeb"
        android:paddingTop="@dimen/y20"
        android:paddingBottom="@dimen/y20">
        
        <RelativeLayout
            android:layout_width="@dimen/x300"
            android:layout_height="@dimen/y200">
            <ImageView
                android:id="@+id/iv_live_screenshot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/iv_text_live_pic"
                android:layout_gravity="center_vertical"/>
            
            <TextView
                android:layout_width="@dimen/x140"
                android:layout_height="@dimen/y40"
                android:text="点击进入"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:layout_marginBottom="@dimen/y14"
                android:background="#0fffffff"/>
        </RelativeLayout>

   

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x30">

            <TextView
                android:id="@+id/tv_live_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="油此盈利"
                android:textColor="#4c4c4c"
                android:textSize="@dimen/x32"/>

            <TextView
                android:id="@+id/tv_live_brief"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_live_title"
                android:lines="3"
                android:layout_marginTop="@dimen/x20"
                android:textSize="@dimen/x26"
                android:ellipsize="end"
                android:text="播报风格：以实际行情走势为导向，以蜡烛图交易信号为基础，稳扎稳打，步步为营"/>



            <TextView
                android:id="@+id/tv_live_teacher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_live_brief"
                android:textSize="@dimen/x26"
                android:gravity="bottom"
                android:layout_alignParentBottom="true"
                android:text="分析师：王老师"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>