<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/header_layout" />


    <android.support.v4.view.ViewPager
        android:id="@+id/banner_ViewPager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y320">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x50"
        android:paddingRight="@dimen/x50"
        android:paddingTop="@dimen/y40">

        <LinearLayout
            android:id="@+id/layout_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/iv_icon_live" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:gravity="center_horizontal"
                android:text="直播"
                android:textColor="#404040"
                android:textSize="@dimen/x26" />

        </LinearLayout>


        <View
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/layout_diurnal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/iv_icon_diurnal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:gravity="center_horizontal"
                android:text="日刊"
                android:textColor="#404040"
                android:textSize="@dimen/x26" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/layout_college"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/iv_icon_college" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:gravity="center_horizontal"
                android:text="学院"
                android:textColor="#404040"
                android:textSize="@dimen/x26" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/layout_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/iv_icon_teacher" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:gravity="center_horizontal"
                android:text="老师"
                android:textColor="#404040"
                android:textSize="@dimen/x26" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>