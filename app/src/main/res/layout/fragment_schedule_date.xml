<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y79"
        android:orientation="horizontal"
        android:background="@drawable/shape_rectangle_gray">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/x32"
            android:text="时间"
            android:gravity="center"
            android:textColor="#4c4c4c"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/litte_gray"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/x32"
                android:textColor="#4c4c4c"
                android:text="2月22日"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_non_farm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/x32"
                android:gravity="center"
                android:textColor="@color/rb_red"
                android:text="（大非农）"/>
        </LinearLayout>

    </LinearLayout>

    <com.longding999.longding.view.CalculHeightListView
        android:focusable="false"
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:scrollbars="none">
    </com.longding999.longding.view.CalculHeightListView>

</LinearLayout>